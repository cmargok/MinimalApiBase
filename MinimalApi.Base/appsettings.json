{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MinimalApiDB": "Server=CMARGOK\\SQLEXPRESS;Initial Catalog=WeatherForecastDB; PersistSecurityInfo=True; Trusted_Connection=false; MultipleActiveResultSets=True; TrustServerCertificate=True"
  },
  "Security": {
    "ApiToken": "194979$#295989",
    "URLSecurityApi": "http://10.1.0.3:7385/SecurityApiV2/api/login/auth",
    "JWT_User": "UserMinimalApi",
    "Jwt": {
      "SecretKey": "xxx",
      "Audience": "ApiSecurity",
      "Issuer": "MinimalProxyApi"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "L": null,
              "Args": {
                "path": "logs/MinimalApi_log-.txt",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "restrictedToMinimumLevel": "Warning"
              }
            },
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://localhost:5341",
                "restrictedToMinimumLevel": "Information"
              }
            }
          ],
          "queueLimit": 10000
        }
      }
    ]

  }

}
